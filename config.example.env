# Employee Management System Deployment Configuration
# Copy this file to config.env and update the values

# Application Configuration
APP_NAME=employee-management
APP_DIR=/var/www/employee-management
APP_PORT=3000
APP_USER=ubuntu

# Database Configuration
DB_NAME=employee_management
DB_USER=employee_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# Repository Configuration
REPO_URL=https://github.com/your-username/employee-management.git
REPO_BRANCH=main

# Domain Configuration
DOMAIN_NAME=employee-management.yourdomain.com
DOMAIN_IP=your-elastic-ip-address

# Security Configuration
SSH_PORT=22
HTTP_PORT=80
HTTPS_PORT=443

# System Configuration
NODE_VERSION=lts
POSTGRES_VERSION=14
NGINX_VERSION=latest

# PM2 Configuration
PM2_APP_NAME=employee-management
PM2_INSTANCES=1
PM2_MAX_MEMORY=1G